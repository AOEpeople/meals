<div class="form-container">
    {{ form_start(form) }}

    {{ form_widget(form.profile) }}
    {{ form_widget(form.orderid) }}

    <div class="form-header">
        {{ form_label(form.amount) }}
        {{ form_widget(form.amount) }}
        <span class="invalid-amount">{{ 'payment.transaction_history.invalid'|trans({}, 'messages') }}</span>
    </div>

    {# Only render payment method options if there is more than one #}
    {% if form.paymethod.count > 1 %}
        <span class="payment-method">{{ 'payment.transaction_history.payment_method'|trans({}, 'messages') }}</span>
        {{ form_widget(form.paymethod) }}
    {% endif %}

    <div class="paypal-button-container"></div>
    {{ form_end(form, {'render_rest': false}) }}
</div>