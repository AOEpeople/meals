{% macro optionalAttribute(attributeName, content)  %}
	{%- if content is not empty %} {{ attributeName }}="{{ content|escape }}" {% endif -%}
{% endmacro %}

{% macro additionalAttributes(attributes) %}
	{%- import 'MealzMealBundle::Components/_common.html.twig' as self -%}
	{%- for attributeName,content in attributes -%}
		{{- self.optionalAttribute(attributeName, content) -}}
	{%- endfor -%}
{% endmacro %}