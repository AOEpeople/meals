{% macro create(order, label, id, class, tools)  %}
	{%- import 'MealzMealBundle::Components/_common.html.twig' as commonlib -%}
	{%- spaceless -%}
		<div class="headline-container {{ class }}"  {{- commonlib.optionalAttribute('id', id) -}}>
			<h{{ order }} class="headline">
				{{ label }}
			</h{{ order }}>
			{% if tools|length > 0 %}
				<div class="headline-tool">
					{%- for tool in tools -%}
						<div class="headline-tool">
							{{ tool|raw }}
						</div>
					{% endfor %}
				</div>
			{% endif %}
		</div>
	{%- endspaceless -%}
{% endmacro %}