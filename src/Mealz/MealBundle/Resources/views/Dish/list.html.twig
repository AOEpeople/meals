{% extends '::base.html.twig' %}

{% set wrapperClass = 'dish-list' %}

{% block body %}

{% include ':partials:flashMessages.html.twig' %}

{{ MealzHeadline.create(1, 'dishes'|trans({},'general'), '', '', []) }}

<div class="table">
	<div class="table-header">
		<div class="dish-title">Title</div>
		<div class="dish-category">Category</div>
		<div class="dish-actions">Actions</div>
	</div>
	{% for dish in dishes %}
	<div class="table-row">
		<div class="dish-title">{{ dish.title }}</div>
		<div class="dish-category">dish category</div>
		<div class="dish-actions">
			{% if is_granted('ROLE_KITCHEN_STAFF') %}
				{% include 'MealzMealBundle:DishAdmin/partials:userTools.html.twig' with {'button_class': 'btn-xs'} %}
			{% endif %}
		</div>
	</div>
	{% endfor %}
</div>
{% endblock %}