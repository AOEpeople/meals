{% extends '::base.html.twig' %}

{% block body %}
	<div class="container">
		<h1>{{ 'dishes'|trans({},'general') }}</h1>
		{% if is_granted('ROLE_KITCHEN_STAFF') %}
			<div class="btn-group bottom-buffer">
				<a
					class="btn btn-success"
					href="{{ path('MealzMealBundle_Dish_new') }}"
				>{{ 'dish.add'|trans({},'action') }}</a>
			</div>
		{% endif %}
		{% include ':partials:flashMessages.html.twig' %}
		<table class="table table-striped">
			<tbody>
			{% for dish in dishes %}
				<tr>
					<td>{{ dish.title }}</td>
					{% if is_granted('ROLE_KITCHEN_STAFF') %}
					<td>
						{% include 'MealzMealBundle:DishAdmin/partials:userTools.html.twig' with {'button_class': 'btn-xs'} %}
					</td>
					{% endif %}
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}