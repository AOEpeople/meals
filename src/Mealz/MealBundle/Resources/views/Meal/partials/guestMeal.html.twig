{% set dish = meal.data.dish %}

<div class="meal-row" {% if dish.isCombinedDish %}data-combined="1"{% else %} data-id="{{ dish.slug }}"{% endif %}>
    {% apply spaceless %}
        <div class="text">
            <div class="title">
                {{ dish.title }}
            </div>
            <div class="description">
                {% if dish.description %}
                    {{ dish.description }}
                {% else %}
                    {{ 'content.participation.dish.no_description'|trans({},'general') }}
                {% endif %}
            </div>
        </div>
        {% include 'MealzMealBundle:Meal/partials:guestMealActions.html.twig' %}
    {% endapply %}
</div>