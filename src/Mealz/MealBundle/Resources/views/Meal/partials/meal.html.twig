{% set dish = meal.dish %}

<div class="meal-row" {% if dish.title == 'Combined Dish' %}data-combi="1"{% else %} data-id="{{ dish.slug }}"{% endif %}>
	{% apply spaceless %}
	<div class="text">
		<div class="title">
			{{ dish.title }}
			{% if dishService.isNew(dish) %}
				<span class="new-flag">{{ 'content.participation.dish.new'|trans({},'general') }}</span>
			{% endif %}
		</div>
		<div class="description">
			{% if dish.description %}
				{{ dish.description }}
			{% else %}
				{{ 'content.participation.dish.no_description'|trans({},'general') }}
			{% endif %}
		</div>
	</div>
	{% include 'MealzMealBundle:Meal/partials:mealActions.html.twig' %}
	{% endapply %}
</div>
