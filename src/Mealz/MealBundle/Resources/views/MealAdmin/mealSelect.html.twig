<div class="meal-row">
    <div class="meal-select-box">

        {% for dishvars in meal.dish.vars %}
            {% for weekdishentries in dishvars %}
                {% if weekdishentries is iterable %}
                    <ul>
                        {% for dishentry in weekdishentries %}
                            {% if loop.index == 1 %}
                                <li class="category">
                                    Category: {{ dishentry.data.category.slug }}
                                </li>
                            {% endif %}
                            <li class="dishes">
                                {{ dishentry.label }}
                                {% if dishentry.data.variations.snapshot|length > 0 %}
                                    <div class="variation-button">variations</div>
                                    <div class="meal-select-variations">
                                        {% for variation in dishentry.data.variations %}
                                            <div class="variation">
                                                <div class="variation-checkbox"></div>
                                                <label for="variation1">{{ variation.description }}</label>
                                            </div>
                                        {% endfor %}
                                        <button type="submit" class="button small">Save</button>
                                    </div>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            {% endfor %}
        {% endfor %}
    </div>
    <div class="meal-select">test essen</div>
    {{ form_row(meal, {'attr' : {'style' : 'display: none;'}}) }}
</div>
