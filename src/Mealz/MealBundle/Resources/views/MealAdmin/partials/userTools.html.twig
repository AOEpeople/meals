{% if is_granted('ROLE_KITCHEN_STAFF') %}
	{% if button_class is not defined %}
		{% set button_class='' %}
	{% endif %}
	<div class="btn-group">
		<a
			class="btn btn-success {{ button_class }}"
			href="{{ link(meal, 'edit') }}"
			title="Edit"
		><span class="glyphicon glyphicon-edit"><span class="sr-only">Edit</span></span></a>
		{% if meal.participants | length == 0 %}
		<a
			class="btn btn-danger {{ button_class }}"
			href="{{ link(meal, 'delete') }}"
			title="Delete"
		><span class="glyphicon glyphicon-remove"><span class="sr-only">Delete</span></span></a>
		{% endif %}
	</div>
{% endif %}