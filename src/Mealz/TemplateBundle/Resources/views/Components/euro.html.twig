{#
# Limit value to two digits to the right of the decimal point and append an euro sign.
#
# @param value int
#}
{% macro create(value) %}
    {%- apply spaceless -%}
        {{ value | number_format(2, 'payment.separator.decimals'|trans({},'messages'), 'payment.separator.thousands'|trans({},'messages')) }} <i class='glyphicon glyphicon-euro'></i>
    {%- endapply -%}
{% endmacro %}
