{% extends 'base_navigation.html.twig' %}

{% import 'MealzTemplateBundle::Components/headline.html.twig' as MealzHeadline %}

{% set wrapperClass = 'login-page' %}

{% block body %}

	{{ MealzHeadline.create(1, 'Login') }}

	{% if error %}
		<div class="alert alert-danger">{{ error.message }}</div>
	{% endif %}

	<form action="{{ path('MealzUserBundle_login') }}" method="post">
		<input type="text" class="form-control" placeholder="Username" id="username" name="_username" value="{{ last_username }}" autofocus />
		<input type="password" class="form-control" placeholder="Password" id="password" name="_password" />
		<button type="submit" class="button small">Login</button>
	</form>


{% endblock %}
